<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainPage">>

    <RelativeLayout

        android:layout_width="395dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">

        <android.support.v7.widget.CardView
            android:id="@+id/card_delivery"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@android:color/holo_orange_light">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="88dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/delivery" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/font_graphica"
                android:text="List of Delivery man"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textColorLink="@android:color/white"
                android:textSize="20sp" />


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_cust"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:layout_marginStart="225dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="55dp"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@android:color/holo_orange_light">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="88dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/admin" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/font_graphica"
                android:text="List of item"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textColorLink="@android:color/white"
                android:textSize="20sp" />


        </android.support.v7.widget.CardView>

